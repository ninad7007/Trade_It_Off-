<%include header %>
  <style media="screen">
    img{
      /*width: 100%;*/
    }
  </style>
  <div class=container>
    <div class="jumbotron">
      <div class="container">

        <h1>You are on the Products page</h1>
        <p>Hand-piked Products from all over the world</p>
        <p>
          <a class="btn btn-lg btn-primary" href="/products/new">Add new Product</a>
        </p>
      </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
      <% products.forEach(function(product){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= product.pimage %>" alt="">
              <div class="caption">
                <h4><%= product.pname %></h4>
              </div>
              <a class="btn btn-primary" href="">More Info</a>
            </div>
          </div>
      <% }); %>
    </div>

  </div>

<% include footer %>
